<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="40.0" prefWidth="300.0" styleClass="card" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <HBox AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
         <children>
            <TextField fx:id="amountTxF" alignment="CENTER_RIGHT" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" styleClass="form-field" />
                <VBox maxHeight="30.0">
                    <children>
                        <Label fx:id="cardCategory" styleClass="tagText" text="LABEL" textFill="#9e9e9e">
                            <font>
                                <Font name="SF Pro Display Regular" size="9.0" />
                            </font>
                        </Label>
                        <Label fx:id="cardName" styleClass="detailText" text="Label" textFill="#9e9e9e">
                            <font>
                                <Font name="SF Pro Text Regular" size="12.0" />
                            </font>
                        </Label>
                    </children>
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
                </VBox>
         </children>
      </HBox>
    </children>
</fx:root>
